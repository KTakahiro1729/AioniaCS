{
  "name": "aioniacs",
  "version": "1.0.0",
  "description": "慈悲なきアイオニアのための非公式キャラクターシート作成ツールです",
  "main": "src/main.js",
  "scripts": {
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html",
    "lint:js": "eslint --config ./config/eslint.config.js .",
    "lint:css": "stylelint \"**/*.css\" --config ./config/.stylelintrc.json",
    "lint:html": "htmlhint \"**/*.html\" --config ./config/.htmlhintrc",
    "test": "jest",
    "e2e": "playwright test --config ./config/playwright.config.js",
    "pree2e": "playwright install"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "eslint": "^9.28.0",
    "eslint-plugin-vue": "^10.1.0",
    "htmlhint": "^1.4.0",
    "jest": "^29.7.0",
    "stylelint": "^16.20.0",
    "stylelint-config-standard": "^38.0.0"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/tests/e2e/"
    ]
  }
}
