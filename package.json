{
  "name": "aioniacs",
  "version": "1.0.0",
  "description": "慈悲なきアイオニアのための非公式キャラクターシート作成ツールです",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html",
    "lint:js": "eslint src/ tests/ --ext .js",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:html": "htmlhint \"**/*.html\"",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "e2e": "playwright test",
    "pree2e": "playwright install",
    "prepare": "husky",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@auth0/auth0-spa-js": "^2.4.1",
    "@auth0/auth0-vue": "^2.4.0",
    "@noble/hashes": "^1.8.0",
    "@vue/compiler-sfc": "^3.5.16",
    "@vue/test-utils": "^2.4.6",
    "aws4fetch": "^1.0.20",
    "dompurify": "^3.2.6",
    "jose": "^6.1.0",
    "jsdom": "^24.0.0",
    "jszip": "^3.10.1",
    "marked": "^15.0.12",
    "pako": "^2.1.0",
    "pinia": "^2.1.7",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.7",
    "@playwright/test": "^1.52.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vitest/ui": "^1.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-vue": "^10.1.0",
    "globals": "^16.2.0",
    "htmlhint": "^1.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "rollup-plugin-visualizer": "^6.0.3",
    "stylelint": "^16.20.0",
    "stylelint-config-standard": "^38.0.0",
    "vite": "^6.3.5",
    "vitest": "^1.4.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.html": [
      "htmlhint",
      "prettier --write"
    ],
    "src/**/*.{js,jsx,ts,tsx}, tests/unit/**/*.{js,jsx,ts,tsx}": [
      "vitest --run"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "MIT"
}
