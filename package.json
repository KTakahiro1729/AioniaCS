{
  "name": "aioniacs",
  "version": "1.0.0",
  "description": "慈悲なきアイオニアのための非公式キャラクターシート作成ツールです",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html",
    "lint:js": "eslint src/ tests/ --ext .js",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:html": "htmlhint \"**/*.html\"",
    "test": "jest",
    "e2e": "playwright test",
    "pree2e": "playwright install",
    "prepare": "husky"
  },
  "dependencies": {
    "jest-environment-jsdom": "^30.0.0-beta.3",
    "jszip": "^3.10.1",
    "vue": "^3.5.13",
    "pinia": "^2.1.7"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.7",
    "@playwright/test": "^1.52.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.28.0",
    "eslint-plugin-vue": "^10.1.0",
    "globals": "^16.2.0",
    "htmlhint": "^1.4.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "stylelint": "^16.20.0",
    "stylelint-config-standard": "^38.0.0",
    "vite": "^6.3.5"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/tests/e2e/"
    ],
    "roots": [
      "<rootDir>/tests/unit"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.html": [
      "htmlhint",
      "prettier --write"
    ],
    "src/**/*.{js,jsx,ts,tsx}, tests/unit/**/*.{js,jsx,ts,tsx}": [
      "jest --findRelatedTests"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "MIT"
}
