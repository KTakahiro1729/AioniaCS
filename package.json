{
  "name": "aioniacs",
  "version": "1.0.0",
  "description": "慈悲なきアイオニアのための非公式キャラクターシート作成ツールです",
  "scripts": {
    "lint": "npm run lint:js && npm run lint:scss && npm run lint:html",
    "lint:js": "eslint assets/src/ assets/js/ tests/ --ext .js",
    "lint:scss": "stylelint \"assets/**/*.scss\" \"_sass/**/*.scss\"",
    "lint:html": "htmlhint _layouts/ _includes/ index.html _site/**/*.html",
    "test": "jest",
    "e2e": "playwright test",
    "jekyll:build": "bundle exec jekyll build",
    "jekyll:serve": "bundle exec jekyll serve --livereload",
    "jekyll:clean": "bundle exec jekyll clean"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "eslint": "^9.28.0",
    "eslint-plugin-vue": "^10.1.0",
    "htmlhint": "^1.4.0",
    "jest": "^29.7.0",
    "stylelint": "^16.20.0",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-config-standard-scss": "^13.0.0"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/tests/e2e/"
    ],
    "roots": [
      "<rootDir>/tests/unit"
    ],
    "testEnvironment": "jsdom"
  },
  "dependencies": {
    "jest-environment-jsdom": "^30.0.0-beta.3"
  }
}
